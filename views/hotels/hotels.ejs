        <div class="filter-section">
          <div class="filter-header" onclick="toggleDropdown()">
            <span>Accessibility</span>
            <span class="arrow">&#9662;</span>
          </div>
          <div class="filter-options">
            <label
              ><input
                type="checkbox"
                data-filter="accessibility"
                value="Private-Kitchen"
              />
              Private-Kitchen</label
            >
            <label
              ><input
                type="checkbox"
                data-filter="accessibility"
                value="Private-garden"
              />
              Private-garden</label
            >
            <label
              ><input
                type="checkbox"
                data-filter="accessibility"
                value="Fire pit"
              />
              Fire pit</label
            >
            <label
              ><input
                type="checkbox"
                data-filter="accessibility"
                value="Spa"
              />Spa</label
            >
            <label
              ><input
                type="checkbox"
                data-filter="accessibility"
                value="Private Mini-bar"
              />
              Private Mini-bar</label
            >
            <label
              ><input
                type="checkbox"
                data-filter="accessibility"
                value="Work Station"
              />
              Work Station</label
            >
          </div>
        </div>

        <button
          class="availability"
          style="margin-top: 16px"
          onclick="applyHotelFilters()"
        >
          Apply Filters
        </button>
        <button
          class="availability"
          style="
            margin-top: 8px;
            background-color: #6c757d;
            border-color: #6c757d;
          "
          onclick="clearAllFilters()"
        >
          Clear Filters
        </button>
      </aside>

      <!-- Hotel Cards -->
      <div class="hotels-container">
        <% hotels.forEach(hotel => { %>
        <div class="hotel-card">
          <div class="hotel-image">
            <img src="<%= hotel.mainImage  %>" alt="Hotel 1" />
          </div>
          <div class="hotel-info">
            <h2 onclick="handleHotelClick(`<%=hotel._id%>`)">
              <%= hotel.title %>
            </h2>
            <p><%= hotel.location %></p>
            <p class="features">
              <%= hotel.amenities.join(" | ") %>
            </p>
            <p><%= hotel.description %></p>
            <p class="deal">Reserve now, pay later</p>
            <p class="rating">
              <% for(let i = 1; i <= hotel.rating; i++){ %> ‚≠ê <%
              }; %>
            </p>
            <div
              style="
                display: flex;
                justify-content: space-between;
              "
            >
              <p class="price">
                <%= hotel.roomType[0].price %> <%= hotel.currency
                %>
                <span>Includes taxes & fees</span>
              </p>
              <button
                style="align-self: center"
                class="availability"
                onclick="handleHotelClick(`<%=hotel._id%>`)"
              >
                Book Now!
              </button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <footer class="footer">
      <div class="footer-container">
        <div class="footer-about">
          <h3>Chasing Horizons</h3>
          <p>
            Explore the beauty of India with us. Your journey to
            breathtaking destinations starts here!
          </p>
        </div>

        <div class="footer-links">
          <h4>Quick Links</h4>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/tours">Tours</a></li>
            <li><a href="/hotels">Hotels</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>

        <div class="footer-social">
          <h4>Follow Us</h4>
          <div class="social-icons">
            <a href="https://www.youtube.com" target="_blank">
              <i
                class="fa-brands fa-youtube"
                style="font-size: 40px"
              ></i>
            </a>
            <a href="https://www.instagram.com" target="_blank">
              <i
                class="fa-brands fa-square-instagram"
                style="font-size: 40px"
              ></i>
            </a>
            <a href="https://x.com/" target="_blank">
              <i
                class="fa-brands fa-square-x-twitter"
                style="font-size: 40px"
              ></i>
            </a>
          </div>
        </div>
      </div>

      <div class="footer-bottom">
        <p>¬© 2025 Chasing Horizons. All Rights Reserved.</p>
      </div>
    </footer>
