          </a>
          <a
            href="/dashboard/settings"
            class="nav-item"
            data-tab="settings"
          >
            <i class="fas fa-cog"></i>
            <span>Settings</span>
          </a>
        </nav>

        <main class="dashboard-myTrips">
          <div class="dashboard-header">
            <h1 class="dashboard-title">My Bookings</h1>
            <button
              onclick="window.location.href = `/` "
              class="btn btn-primary"
            >
              <span>+</span> Plan New
            </button>
          </div>

