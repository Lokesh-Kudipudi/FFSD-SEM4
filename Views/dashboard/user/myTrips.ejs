          <div class="trips-section">
            <div class="section-header">
              <h2 class="section-title">Upcoming</h2>
            </div>
            <div class="trips-grid">
              <!-- <div class="trip-card">
                <div style="position: relative">
                  <img
                    src="/api/placeholder/400/320"
