              <% bookings?.forEach(booking => { %> <% if
              (booking.bookingDetails?.status == "upcoming" ||
              booking.bookingDetails?.status == "pending") { %>
              <div class="trip-card">
                <div style="position: relative">
                  <img
                    src="<%= booking.itemId.mainImage %>"
                    alt="<%= booking.itemId.title %>"
                    class="trip-image"
                  />
                  <div class="trip-status status-upcoming">
                    Upcoming
                  </div>
                </div>
                <div class="trip-content">
                  <div class="trip-date">
                    <span>üìÖ</span> <%=
                    booking.bookingDetails?.startDate %>
                  </div>
                  <h3 class="trip-title">
                    <%= booking.itemId.title %>
                  </h3>
                  <div class="trip-destination">
                    <span>üìç</span> <%=
                    booking.itemId.startLocation %>
                  </div>

                  <div class="trip-stats">
                    <div class="stat">
                      <div class="stat-value">
                        <%= booking.itemId.itinerary.length %>
                      </div>
                      <div class="stat-label">Days</div>
                    </div>
                    <div class="stat">
                      <div class="stat-value">
                        <%= booking.itemId.destinations.length %>
                      </div>
                      <div class="stat-label">Destinations</div>
                    </div>
                    <div class="stat">
                      <div class="stat-value">
                        <% let activityCount = 0; if
                        (booking.itemId.itinerary) {
                        booking.itemId.itinerary.forEach(day => {
                        activityCount += day.activities?.length
                        || 0; }); } %> <%= activityCount %>
                      </div>
                      <div class="stat-label">Activities</div>
                    </div>
                  </div>

                  <div class="trip-actions">
                    <button data-itemId="<%=booking.itemId._id%>" data-bookingId="<%=booking._id%>" class="trip-action-btn btn-outline cancel-trip">
                      Cancel
                    </button>
                    <button data-itemId="<%=booking.itemId._id%>"  class="view-details-trip trip-action-btn btn-primary">
                      View Details
                    </button>
                  </div>
                </div>
              </div>
              <% }; %> <% }); %>
            </div>
          </div>

